/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
# define version_0 0
# define version_1 1

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
const uint8_t bootloader_version[2] = {version_0,version_1};
GPIO_PinState status_of_GPIO = GPIO_PIN_SET;
char pdata[1024];
char receive_byte[3];
char temp[16];
uint32_t update_firmware_address = 0X08060000;
int numPackets;
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart1;
UART_HandleTypeDef huart6;
